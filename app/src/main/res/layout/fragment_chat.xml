<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.anvisys.tabsuisample.ChatFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:divider="@color/colorAccent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/markerImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:foregroundGravity="center"
                android:src="@drawable/profile_amit"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/markerImage"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/userStatus"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_toRightOf="@id/userName"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/userDistance"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/userTime"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/updateTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/statusView"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/chatWindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/statusView"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="60dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <ListView
            android:id="@+id/chatList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:scrollingCache="true"
            android:transcriptMode="alwaysScroll"

            >

        </ListView>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/myPost"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/box_border"
        >

        <EditText
            android:id="@+id/myMessage"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:hint="Add New Post"
            android:theme="@style/Theme.AppCompat.Light"
            android:textSize="15sp"
            android:focusableInTouchMode="true"
            />

        <ImageView
            android:id="@+id/sendImage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:src="@drawable/send"

            />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    <net.anvisys.letscatch.Shape.OvalImageView
        android:id="@+id/markerImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foregroundGravity="center"
        android:src="@drawable/user_image"
        />
    <ImageView
        android:id="@+id/isChecked"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/check"
        android:visibility="gone"
        />
</RelativeLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="8"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_toRightOf="@id/markerImage"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/userStatus"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_toRightOf="@id/userName"
        android:layout_marginTop="1dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
        android:id="@+id/userDistance"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/userTime"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:textSize="14sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/msgCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="0"
        android:textSize="12sp"
        android:background="@drawable/counter_background"
        android:layout_alignBottom="@id/startTime"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/updateTime"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        />

    </LinearLayout>
</LinearLayout>